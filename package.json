{
  "license": "MIT",
  "scripts": {
    "test:local": "bash test-local.sh",
    "test:local:fast": "SKIP_BUILD=1 bash test-local.sh",
    "test:unit": "ANCHOR_PROVIDER_URL=http://127.0.0.1:8899 ANCHOR_WALLET=~/.config/solana/id.json yarn run ts-mocha -p ./tsconfig.json -t 1000000 'tests/a2a-swap.ts'",
    "test:sdk": "ANCHOR_PROVIDER_URL=http://127.0.0.1:8899 ANCHOR_WALLET=~/.config/solana/id.json yarn run ts-mocha -p ./tsconfig.json -t 1000000 'tests/cli-integration.test.ts'",
    "smoke:devnet": "ANCHOR_WALLET=~/.config/solana/id.json npx ts-node -p tsconfig.scripts.json scripts/smoke-devnet.ts",
    "init:treasury": "ANCHOR_WALLET=~/.config/solana/id.json npx ts-node --project tsconfig.scripts.json scripts/init-treasury.ts",
    "init:treasury:mainnet": "INIT_RPC=https://api.mainnet-beta.solana.com ANCHOR_WALLET=~/.config/solana/id.json npx ts-node --project tsconfig.scripts.json scripts/init-treasury.ts",
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@solana/spl-token": "^0.4.14",
    "@solana/web3.js": "^1.95.8"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "chai": "^4.3.4",
    "mocha": "^9.0.3",
    "prettier": "^2.6.2",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.7.3"
  }
}
