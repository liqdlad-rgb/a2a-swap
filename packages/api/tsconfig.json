{
  "compilerOptions": {
    "target":          "ES2022",
    "module":          "ES2022",
    "moduleResolution": "bundler",
    "lib":             ["ES2022"],
    "types":           ["@cloudflare/workers-types", "node"],
    "strict":          true,
    "skipLibCheck":    true,
    "noUnusedLocals":  true,
    "noImplicitAny":   true,
    "outDir":          "dist",
    "rootDir":         "src"
  },
  "include": ["src/**/*.ts"]
}
